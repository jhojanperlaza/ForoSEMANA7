<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.StepCounter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Paleta principal -->
        <item name="colorPrimary">@color/red_700</item>
        <item name="colorPrimaryVariant">@color/red_500</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Color secundario = negro para acentos -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- StatusBar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/red_700</item>

        <!-- Tipografía y controles por defecto -->
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:buttonStyle">@style/StepButton</item>
    </style>

    <!-- Botón con fondo rojo y texto blanco -->
    <style name="StepButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/red_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>
